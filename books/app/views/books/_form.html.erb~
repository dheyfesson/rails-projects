<%= simple_form_for(@book) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
	<%= f.input :author %>
	<%= f.input :title %>
	<%= f.input :price, hint: "price shold be USD" %>
	<%= f.input :available %>
	<%= f.association :category %>
	<%= f.association :review,collection: 1..5, as: :radio_buttons %>
	<%= f.input :description, label: "Descrição"%>
  </div>

  <div class="form-actions">
	<%= f.button :submit %>
  </div>
<% end %>
